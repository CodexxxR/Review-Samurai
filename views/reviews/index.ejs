<html lang="en">
<%- include("../partials/head.ejs") %>

<body>
  <%- include("../partials/nav.ejs") %>

  <div class="blogs content">
    <h2>All Reviews</h2>

    <% if (reviews.length > 0) { %>
      <% reviews.forEach(review => { %>
        <a class="single" href="/reviews/<%= review._id %>"><h3 class="title"><%= review.title %></h3></a>
        <p class="snippet"><%= review.snippet %></p>
      <% }) %>
    <% } else { %>
      <p>There are no reviews to display...</p>
    <% } %>
    
  </div>

  <%- include("../partials/footer.ejs") %>
</body>
</html>
